{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "dom"], // Added "dom" to support browser APIs
    "target": "es6",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
